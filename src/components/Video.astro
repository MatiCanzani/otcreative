---
import Plyr from "astro-plyr";
import type { Options, SourceInfo } from "astro-plyr";

const source: SourceInfo = {
  type: "video",
  title: "Example title",
  // poster:
  //   "https://cdn.plyr.io/static/demo/View_From_A_Blue_Moon_Trailer-HD.jpg",
  sources: [
    {
      src: "https://res.cloudinary.com/mcanzani/video/upload/v1727634102/publi_qyioxi.mp4",
      type: "video/mp4",
    },
    {
      src: "https://res.cloudinary.com/mcanzani/video/upload/v1727634102/publi_qyioxi.mp4",
      type: "video/mp4",
      quality: { options: [2880] },
    },
  ],
};

const options: Options = {
  debug: true,
  autoplay: true,
  muted: true,
  controls: false,
};
---

<Plyr options={options} source={source} />

<style is:global>
  .plyr--video {
    position: absolute;
    width: 100%;
    height: 100vh;
    z-index: -1;
    background-color: black;
  }

  .plyr video {
    display: block;
    height: 100vh;
    width: 100%;
    object-fit: cover;
  }
</style>
